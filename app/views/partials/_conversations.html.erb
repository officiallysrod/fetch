<!-- Conversations -->
<div class="conversations col-sm-3">
  <div class="conversations-title">
    <h3 class="text-center">Matches</h3>
  </div>
  <div class="conversation">
   
        <div ng-repeat="f in friends" ng-show="friends.length >= 1" ng-click="showMatch(friends.indexOf(f))">
          <div class="row">
            <div bg-image="{{f.profile_pic_small}}" class="friend-thumb pull-left img-circle"></div>
            <div class="row-details pull-left">
              <h4>{{f.dog_name}} &amp; {{f.fname}}</h4>
              <p>{{ f.last_message_received.body }}</p>
            </div>
          </div>
        </div>
     
      <h4 class="text-center" ng-show="friends.length < 1">You don't have any matches yet!</h4>
    
  </div>
</div>
