        <%= form_for @user, url: session_path, html: {class: "email-hidden"} do |f| %>
          <div class="form-group">
            <div class="input-group">
              <div class="input-group-addon">@</div>
              <%= f.text_field :email, placeholder: "Enter email", :class => "form-control" %><br />
