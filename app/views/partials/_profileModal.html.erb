<!-- Show Modal -->
<div class="modal fade profileModal" id="<%= user.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body clearfix">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <div class="picture pull-left">
          <%= image_tag "userpicture", class: "picture-img" %>
        </div>
        <div class="bio">
          <h3 class="bio-name"><%= user.fname %> <%= user.lname %></h3>
          <p class="bio-description"><%= user.bio %></p>
        </div>
      </div>
    </div>
  </div>
</div>